<div class="container" id="posts-edit">

  <h2 class="title">投稿編集</h2>

  <%# エラーメッセージ %>
  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーがでいます。
    <%= @post.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%# 編集フォーム %>
  <%= form_for(@post) do |f| %>

    <div class="row post-box">

      <div class="col-xs-12 col-md-4 col-md-offset-3">
        <h4>before画像</h4>
        <div id="before-image"></div>
        <%= f.attachment_field :before_image, id: "preview-before" %>
      </div>

      <div class="col-xs-12 col-md-4">
        <h4>after画像</h4>
        <div id="after-image"></div>
        <%= f.attachment_field :after_image, id: "preview-after" %>
      </div>

    </div>

    <div class="row post-box">

      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h4>説明</h4>
        <%= f.text_area :body, class: "form-control" %>
        <%= f.submit '投稿編集' %>
      </div>

    </div>

  <% end %>

</div>
