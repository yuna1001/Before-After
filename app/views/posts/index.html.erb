<h1>Posts#index</h1>

<%# 投稿一覧を表示 %>
<% @posts.each do |post| %>

  <div class="post-item">

    <%# ここからbefore画像 %>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :before_image, :fill, 400, 400 %>
    <% end %>
    <%# ここまで %>

    <%# ここからafter画像(cssにてhoverすると表示されるように設定) %>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :after_image, :fill, 400, 400, class: "before_image" %>
    <% end %>
    <%# ここまで %>

    <%# ここからプロフィール画像(cssにてhoverすると表示されるように設定) %>
    <%= link_to user_path(post.user.id) do %>
      <%= attachment_image_tag post.user, :profile_image,
       :fill, 10, 10, fallback: "noimage.png", size:'10x10', class: "profile_image" %>
    <% end %>
    <%# ここまで %>

    <%# ここからユーザ名(cssにてhoverすると表示されるように設定) %>
    <%= post.user.name %>
    <%# ここまで %>

    <%# いいねボタン %>
    <% if post.favorited_by?(current_user) %>
      <%= link_to "いいね", post_favorites_path(post), method: :delete %>
    <% else %>
      <%= link_to "いいね", post_favorites_path(post), method: :post %>
    <% end %>
    <%= post.favorites.count %>けん

  </div>

<% end %> 